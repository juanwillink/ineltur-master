@model CheckArgentina.Models.NPSRedirectionModel
@using CheckArgentina.Commons
           
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/c-css.ashx?UserKey="+SessionData.User.UserId)" />

    <script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.7.2.min.js")" type="text/javascript"></script>  
    <script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.21/jquery-ui.min.js")" type="text/javascript" ></script>

    <script src="@Href("~/Scripts/check_functions.js")" type="text/javascript" ></script>
    <script type="text/javascript">
        $(function(){
            var features = 'height=700,width=800,scrollTo,resizable=1,scrollbars=1,location=0';
            nueva = window.open($('#FrontPSP_URL').val(), 'Popup', features);
        });
    </script>
</head>
<body>
    @Html.HiddenFor(m => m.FrontPSP_URL)

    <div class="payment-result-container rounded roundedLightMainColor">

        <h3>Redirigiendo...</h3>
        <p>Se abrirá una ventana que le permitirá cargar la información de su medio de pago.</p>
        <p>Una vez que haya completado los datos, volverá a ver el resultado de su operación en este apartado.</p>
        <p>De ser necesario, deberá habilitar los Pop-ups para este sitio.</p>
    </div>
    <div class="clear">
    </div>
</body>
</html>

@model CheckArgentina.Models.LoginModel

@using CheckArgentina.Commons;

@{
    Layout = null;
}
<div class="col-md-4 col-md-offset-4">
    <div class="panel">
        <div class="panel-heading text-center">
            <h2>Login</h2>
        </div>
        <div class="panel-body">
            <form action="/Login/LoginAttemp" method="post">
                <div class="form-group">
                    <label for="Username">Nombre de Usuario</label>
                    @Html.TextBoxFor(m => m.Username).AddClasses("form-control")
                </div>
                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    @Html.PasswordFor(m => m.Password).AddClasses("form-control")
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-main">Log In</button>
                    <a href="" type="button" class="btn btn-default">Olvido su Contraseña?</a>
                </div>
            </form>
        </div>
    </div>
</div>
